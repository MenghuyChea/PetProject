<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:background="#E4E4E4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingTop="50dp"
            android:orientation="vertical"
            android:background="#500DEF"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/me"
                app:civ_border_color="#FF000000"
                app:civ_border_width="5dp"/>

            <TextView
                android:text="Sanit"
                android:textSize="30sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/post_view"
                    android:src="@drawable/post"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <TextView
                    android:paddingTop="5sp"
                    android:layout_toRightOf="@+id/post_view"
                    android:gravity="start"
                    android:text="Posts"
                    android:textSize="20sp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/username_view"
                    android:src="@drawable/person"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>

                <TextView
                    android:paddingTop="5sp"
                    android:layout_toRightOf="@+id/username_view"
                    android:gravity="start"
                    android:text="Change Username"
                    android:background="#fff"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/key_password"
                    android:src="@drawable/key"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <TextView
                    android:paddingTop="5sp"
                    android:layout_toRightOf="@id/key_password"
                    android:gravity="start"
                    android:text="Change Password"
                    android:textSize="20sp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/logout_view"
                    android:src="@drawable/logout"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <TextView
                    android:paddingTop="5sp"
                    android:layout_toRightOf="@id/logout_view"
                    android:gravity="start"
                    android:text="Logout"
                    android:textSize="20sp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>