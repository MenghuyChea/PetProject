<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.PostFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#3333FF"
        android:layout_height="50dp">


        <ImageView
            android:id="@+id/btn_backpost"
            android:src="@drawable/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:text="Post"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/news_propost"
            android:background="@drawable/img_profile"
            android:src="@drawable/dd"
            android:layout_width="90dp"
            android:layout_height="70dp"/>

        <TextView
            android:id="@+id/news_namepropost"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/news_propost"
            android:text="MengHuy"
            android:textSize="20sp"
            android:layout_width="210dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/btn_post"
            android:layout_gravity="end"
            android:background="@drawable/post_btn"
            android:gravity="center"
            android:hint="Post"
            android:textColorHint="#000000"
            android:layout_width="80dp"
            android:layout_height="50dp"/>

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="450dp">


        <EditText
            android:id="@+id/ed_post"
            android:maxLines="1"
            android:background="@drawable/edittext_post"
            android:hint="What's on your mind?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="10dp"
            android:id="@+id/image_post"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
        <Button
            android:id="@+id/btn_addphotos"
            android:hint="Choose image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>