<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:id="@+id/card_view"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/news_imgpro"
                android:background="@drawable/img_profile"
                android:src="@drawable/dd"
                android:layout_width="70dp"
                android:layout_height="50dp"/>

            <TextView
                android:id="@+id/news_namepro"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/news_imgpro"
                android:text="MengHuy"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/news_despro"
                android:layout_below="@id/news_namepro"
                android:layout_toRightOf="@+id/news_imgpro"
                android:layout_marginLeft="10dp"
                android:text="This is my pet. It's about 2 years old."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/news_imgpost"
                android:layout_below="@+id/news_despro"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/a"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>

            <ImageView
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:id="@+id/btn_like"
                android:src="@drawable/like"
                android:layout_below="@+id/news_imgpost"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <ImageView
                android:layout_marginLeft="70dp"
                android:layout_toRightOf="@+id/btn_like"
                android:layout_marginTop="20dp"
                android:id="@+id/btn_comment"
                android:src="@drawable/comment"
                android:layout_below="@+id/news_imgpost"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <ImageView
                android:layout_marginLeft="70dp"
                android:layout_toRightOf="@+id/btn_comment"
                android:layout_marginTop="20dp"
                android:id="@+id/btn_send"
                android:src="@drawable/send"
                android:layout_below="@+id/news_imgpost"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
