<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFCFC"
    android:layout_height="match_parent"
    tools:context=".newsfeed.NewsPost">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#3333FF"
        android:layout_height="50dp">


        <ImageView
            android:id="@+id/btn_backpost"
            android:src="@drawable/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:text="Post"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/news_propost"
            android:background="@drawable/img_profile"
            android:src="@drawable/dd"
            android:layout_width="90dp"
            android:layout_height="70dp"/>

        <TextView
            android:id="@+id/news_namepropost"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/news_imgpro"
            android:text="MengHuy"
            android:textSize="25sp"
            android:layout_width="210dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_post"
            android:layout_gravity="end"
            android:background="@drawable/post_btn"
            android:gravity="center"
            android:hint="Post"
            android:textColorHint="#000000"
            android:layout_width="80dp"
            android:layout_height="50dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_addphotos"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="450dp">


        <EditText
            android:maxLines="1"
            android:background="@drawable/edittext_post"
            android:hint="What's on your mind?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_addphoto"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_add"/>
            <TextView
                android:gravity="center"
                android:textColor="#000000"
                android:text="add photo"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:foregroundGravity="bottom"
        android:layout_gravity="bottom"
        android:background="#FFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:layout_marginRight="30dp"
            android:id="@+id/btn_homepost"
            android:src="@drawable/home"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <ImageView
            android:layout_marginRight="30dp"
            android:id="@+id/btn_searchpost"
            android:src="@drawable/search"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <ImageView
            android:layout_marginRight="30dp"
            android:id="@+id/btn_carepost"
            android:src="@drawable/care"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <ImageView
            android:layout_marginRight="30dp"
            android:id="@+id/btn_notificationpost"
            android:src="@drawable/notification"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <ImageView
            android:id="@+id/btn_personpost"
            android:src="@drawable/person"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>
</LinearLayout>